<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    From here starts the RadioButton STYLING-->
    <!--    This style is applied to all the runs radio buttons adn is also used as a parent for wicket radio button-->
    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:paddingStart">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/radioButtonCheckColor</item>
    </style>


    <!--  This style is applied to the wicket radio button - to indicate that it works differently -->
    <style name="RadioButtonStyle.RadioButtonWicket" parent="RadioButtonStyle">
        <item name="android:buttonTint">@color/radioButtonWicket</item>
    </style>


    <!--    From here starts the Cards/MaterialCards STYLING-->
    <!--    This style is applied to Team Cards in the Main screen. The parent of this style is MaterialCardView-->
    <style name="TeamCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
    </style>

    <!--    This style is applied to the card which contains the Radio Group (Scoring Options)-->
    <style name="RadioButtonCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="cardCornerRadius">12dp</item>
    </style>


    <!--    This is ImageView / ImageFilterView Styles-->
    <!--    This style is applied to the team's Image, and it is set to perfect round using ImageFilterView-->
    <style name="TeamImageStyle" parent="Theme.Jash_score">
        <item name="roundPercent">1</item>
        <item name="android:layout_width">30sp</item>
        <item name="android:layout_height">24dp</item>
    </style>


    <!--    From here starts the TEXT STYLING-->
    <!--    This style is applied to the Team's Name (Title), with custom applied Font Family-->
    <style name="TeamTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/titleTextColor</item>

    </style>

    <!--    This style is applied to the Team's Score (Runs/Wickets), with custom applied Font Family-->
    <style name="TeamScoreStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/teamRunsColor</item>
    </style>

    <!--    This style is applied to the game's Status, with custom applied Font Family-->
    <style name="GameInfoStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>


    <!--    From here starts the BUTTONS STYLING-->

    <!--    This is the base button style which is applied to all the three with some modifications-->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <!--    This style inherits the base button style and is applied to Decrease Button-->
    <style name="ButtonStyle.DecreaseButton">
        <item name="android:backgroundTint">@color/red_button</item>
    </style>

    <!--    This style inherits the base button style and is applied to Increase Button-->
    <style name="ButtonStyle.IncreaseButton">
        <item name="android:backgroundTint">@color/green_button</item>
    </style>

    <!--    This style inherits the base button style and is applied to New Game Button-->
    <style name="ButtonStyle.NewGameButton">
        <item name="android:backgroundTint">@android:color/holo_blue_dark</item>
    </style>

</resources>